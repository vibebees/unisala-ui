---
type Props = {
  authorName: string;
  oneLinerBio: string;
  images: string[];

};

const { authorName, oneLinerBio, images} = Astro.props;
 const randomImage = images[Math.floor(Math.random() * images.length)]
---
{oneLinerBio.length > 0 && <section class="bg-white dark:bg-gray-900">
    <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
        <figure class="max-w-screen-md mx-auto">
            <svg class="h-12 mx-auto mb-3 text-gray-400 dark:text-gray-600" viewBox="0 0 24 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z" fill="currentColor"/>
            </svg> 
            <blockquote>
                <p class="text-2xl font-medium text-gray-900 dark:text-white">
                    {oneLinerBio}
                </p>
            </blockquote>
            <figcaption class="flex items-center justify-center mt-6 space-x-3">
              <img
              class="w-8 h-8 rounded-full mr-2"
              src={`https://api.multiavatar.com/aaa.svg`}
              alt="Author avatar"
            />
                <div class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700">
                    <div class="pr-3 font-medium text-gray-900 dark:text-white">{authorName}</div>
                    <!-- <div class="pl-3 text-sm font-light text-gray-500 dark:text-gray-400">Software Developer</div> -->
                </div>
            </figcaption>
        </figure>
    </div>
  </section>}
  <div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
    <div class="max-w-lg sm:text-center sm:mx-auto">
      <div class="max-w-screen-md mx-auto px-4 py-8">
        <div class="">
            <div class="w-full max-w-4xl mx-auto mb-8">
            <img
             src={randomImage} 
             alt={`${'title'}
              unisala image`} 
              class="w-full h-full object-contain"
            />
            </div>
        </div>
      </div>

      <h1 class="font-signature italic text-xl lg:text-3xl text-black dark:text-white tracking-wide border-b-2 border-indigo-300 dark:border-gray-600 pb-2 mb-4 shadow-sm">
          Signature of {authorName}
      </h1>
      
    </div>
  </div>
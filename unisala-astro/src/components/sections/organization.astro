---
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import { buttonVariants } from "../ui/button";
---

<section class="container flex flex-col gap-6 py-8 md:max-w-[64rem] md:py-12 lg:py-24">
    <div class="mx-auto flex w-full flex-col gap-4 md:max-w-[58rem]">
      <h2 class="font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
        Empower Your Student Organization with Unisala
      </h2>
      <p class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7">
        Discover the tools to boost your organization's impact and connectivity on a global scale.
      </p>
    </div>
    <div class="grid w-full items-start gap-10 rounded-3xl overflow-hidden border p-10 md:grid-cols-[1fr_200px] bg-background">
      <div class="grid gap-6">
        <h3 class="text-xl font-bold sm:text-2xl">
          Exclusive Benefits:
        </h3>
        <ul class="grid gap-3 text-sm text-muted-foreground sm:grid-cols-2">
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Connect with a Robust Alumni Network
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Amplify Event Visibility and Legacy
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Extend Your Reach Globally and Historically
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Facilitate Resource and Knowledge Exchange
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Increase Your Visibility Online
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4 text-center">
        <div>
          <h4 class="text-7xl font-bold">$19</h4>
          <p class="text-sm font-medium text-muted-foreground">
            Per Month
          </p>
        </div>
        <a href="/signup" class={cn(buttonVariants({ variant: "primary", size: "lg" }))}>
          Join Now
        </a>
      </div>
    </div>
    <div class="mx-auto flex w-full max-w-[58rem] flex-col gap-4">
      <p class="max-w-[85%] leading-normal text-muted-foreground sm:leading-7">
        Join the many student organizations that have upgraded their operations with Unisala.{" "}
        <strong>Start your free trial today!</strong>
      </p>
    </div>
  </section>

---
import MainLayout from "@/layouts/main-layout.astro";
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
---

<MainLayout title="404: Not Found" description="Page not found">
  <section class="bg-white dark:bg-gray-900">
    <div class="container min-h-screen px-6 py-12 mx-auto lg:flex lg:items-center lg:gap-12">
      <div class="wf-ull lg:w-1/2">
        <p class="text-sm font-medium text-blue-500 dark:text-blue-400">404 error</p>
        <h1 class="mt-3 text-2xl font-semibold text-gray-800 dark:text-white md:text-3xl">Page not found</h1>
        <p class="mt-4 text-gray-500 dark:text-gray-400">Sorry, the page you are looking for doesn't exist. Here are some helpful links:</p>
        <div class="flex items-center mt-6 gap-x-3">
          <Button variant="outline" className="flex items-center justify-center gap-x-2">
            <Icon name="lucide:arrow-left" class="w-5 h-5 rtl:rotate-180" />
            <span>Go back</span>
          </Button>
          <Button>
            <a href="/">Take me home</a>
          </Button>
        </div>
      </div>
      <div class="relative w-full mt-12 lg:w-1/2 lg:mt-0">
        <Image 
          class="w-full max-w-lg lg:mx-auto"
          src="/images/blog/review-university.webp"
          alt="404 Illustration"
          width={500}
          height={500}
        />
      </div>
    </div>
  </section>
</MainLayout>

<script>
  document.querySelector('button').addEventListener('click', () => {
    history.back();
  });
</script>
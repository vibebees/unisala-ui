---
import MainLayout from "@/layouts/main-layout.astro";
import { Image } from "astro:assets";
import StepIndicator from "@/components/welcome-form/StepIndicator.tsx";
import FirstStep from "@/components/welcome-form/FirstStep.astro";
---

<MainLayout title="About" description="Lorem ipsum dolor sit amet">
  <StepIndicator client:load />
  <div class="card">
    <div class="image-section">
      <Image
        src="https://i.pinimg.com/236x/de/b9/d7/deb9d7157b7dbd47df4184b63ef48755.jpg"
        alt="Welcome"
        width={400}
        height={400}
      />
    </div>
    <div class="content-section">
      <FirstStep />
    </div>
  </div>

  <style>
    .card {
      display: flex;
      background-color: white;
      overflow: hidden;
      height: calc(100vh - 80px);
    }
    .image-section {
      height: 100%;
    }
    .image-section img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .content-section {
      flex: 1;
      padding: 2rem;

      color: white;
    }
    h1 {
      margin-top: 0;
    }
    .form-info {
      font-size: 0.9rem;
      opacity: 0.8;
    }
    button {
      background-color: #ff5722;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</MainLayout>
